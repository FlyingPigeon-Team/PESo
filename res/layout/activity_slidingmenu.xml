<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <!-- 点击登录 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#FF0396db" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1.5"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/Login"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/head" />

            <!-- <TextView
                android:id="@+id/user_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/click_text"
                android:textColor="#FFFFFF" /> -->
        </LinearLayout>

        <!-- <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" /> -->
            
            <TextView
                android:id="@+id/user_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="@string/click_text"
                android:layout_weight="1" 
                android:textColor="#FFFFFF" 
                android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <!-- 首页 -->

        <LinearLayout
            android:id="@+id/index"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ebebeb"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/index_image"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.5"
                android:contentDescription="@string/desc"
                android:gravity="center" />

            <TextView
                android:id="@+id/index_text"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/index_text"
                android:textColor="#000000"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/navigate_right_image5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/navigate_right" />
        </LinearLayout>

        <!-- 个人信息 -->

        <LinearLayout
            android:id="@+id/personalinformation"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/teacher_male_image"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:contentDescription="@string/desc"
                android:src="@drawable/people_info" />

            <TextView
                android:id="@+id/personal_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/people_info_text"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/navigate_right_image1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/navigate_right" />
        </LinearLayout>

        <!-- 我的下载 -->

        <LinearLayout
            android:id="@+id/mydownload"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/package_download_image"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:contentDescription="@string/desc"
                android:src="@drawable/package_download" />

            <TextView
                android:id="@+id/download_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/package_download"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/navigate_right_image2"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/navigate_right" />
        </LinearLayout>

        <!-- 我的收藏 -->

        <LinearLayout
            android:id="@+id/mycollection"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/favs_image"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:contentDescription="@string/desc"
                android:src="@drawable/favs" />

            <TextView
                android:id="@+id/favs_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/favs_text"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/navigate_right_image3"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/navigate_right" />
        </LinearLayout>

        <!-- 记录本 -->

        <LinearLayout
            android:id="@+id/record_pad"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/record_pad_img"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:contentDescription="@string/desc"
                android:src="@drawable/record_pad_img" />

            <TextView
                android:id="@+id/notepad_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_pad"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/navigate_right_image6"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/navigate_right" />
        </LinearLayout>

        <!-- 系统设置 -->

        <LinearLayout
            android:id="@+id/systemsetting"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/cogs_image"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:contentDescription="@string/desc"
                android:src="@drawable/cogs" />

            <TextView
                android:id="@+id/setting_text"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cogs_setting"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/navigate_right_image7"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:contentDescription="@string/desc"
                android:src="@drawable/navigate_right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>